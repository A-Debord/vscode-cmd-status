{
	"name": "cmd-status",
	"displayName": "Cmd Status",
	"description": "runs a command, shows output in status bar",
	"version": "0.1.0",
	"author": "A. Debord",
	"publisher": "adebord",
	"license": "GPL-3.0",
	"engines": {
		"vscode": "^1.43.0"
	},
	"repository": "https://github.com/A-Debord/vscode-cmd-status",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Cmd Status",
			"properties": {
				"cmdStatus.command": {
					"type": "string",
					"default": "echo \"hello\"",
					"description": "system command to be displayed"
				},
				"cmdStatus.interval": {
					"type": "number",
					"default": "10",
					"description": "refresh time in (s)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.14.6",
		"@types/vscode": "^1.50.0",
		"eslint": "^7.12.1",
		"@typescript-eslint/parser": "^4.6.0",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.0",
		"typescript": "^4.0.5",
		"vscode-test": "^1.4.1"
	}
}
